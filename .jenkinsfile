pipeline {
  agent { label 'docker' }
  options {
    timeout(time: 4, unit: 'HOURS')
  }
  stages {
    stage('Clean/Setup') {
      steps {
        sh 'git reset --hard && git clean -ffdx'
        sh 'git submodule update --init --recursive && make clean'
        sh 'make venv'
      }
    }
    stage('Test/Build/Lint') {
      steps {
        sh 'make all -j 3'
        archiveArtifacts artifacts: '*.svg', onlyIfSuccessful: true
        recordIssues qualityGates: [[threshold: 50, type: 'TOTAL', unstable: true]], tools: [pyLint(pattern: 'pylint.log')]
      }
    }
  }
  post {
    always {
      cleanWs cleanWhenFailure: false, cleanWhenNotBuilt: false, cleanWhenUnstable: false
    }
  }
}
